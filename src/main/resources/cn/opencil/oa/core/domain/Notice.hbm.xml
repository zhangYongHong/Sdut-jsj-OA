<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="cn.opencil.oa.core.domain.Notice" table="jsj_notice">
		<id name="uuid" type="java.lang.String" length="100"></id>
		<property name="title" type="java.lang.String" length="200"></property>
		<property name="content" type="java.lang.String" length="20000"></property>
		<property name="user" type="java.lang.String" length="50"></property>
		<property name="beginDate" type="java.sql.Date" length="60"></property>
	</class>
</hibernate-mapping>